<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">SAE_CLIENTGestion</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <!-- Menu Gestion avec sous-menus -->
        <div class="nav-item px-3">
            <div class="nav-link" @onclick="ToggleGestionMenu">
                <span class="bi bi-gear-fill" aria-hidden="true"></span> Gestion
                <span class="bi @(gestionExpanded ? "bi-chevron-down" : "bi-chevron-right") float-end"></span>
            </div>

            <div class="@(gestionExpanded ? "show" : "collapse")">
                <div class="nav-item px-4">
                    <NavLink class="nav-link" href="gestion/batiments">
                        <span class="bi bi-building" aria-hidden="true"></span> Bâtiments
                    </NavLink>
                </div>
                <div class="nav-item px-4">
                    <NavLink class="nav-link" href="gestion/salles">
                        <span class="bi bi-door-open" aria-hidden="true"></span> Salles
                    </NavLink>
                </div>
            </div>
        </div>
    </nav>
</div>

<style>
    .nav-item {
        font-size: 0.9rem;
        padding-bottom: 0.5rem;
    }

        .nav-item:first-of-type {
            padding-top: 1rem;
        }

        .nav-item:last-of-type {
            padding-bottom: 1rem;
        }

    .nav-link {
        padding: 0.5rem 0;
        color: #d7d7d7;
        border-radius: 4px;
        height: 3rem;
        display: flex;
        align-items: center;
        line-height: 3rem;
        cursor: pointer;
    }

        .nav-link:hover {
            background-color: rgba(255,255,255,0.1);
            color: white;
        }

    .bi {
        margin-right: 0.5rem;
        vertical-align: -0.125em;
    }

    .show {
        display: block;
    }

    .collapse {
        display: none;
    }

    /* Animation pour le menu déroulant */
    .show, .collapse {
        transition: all 0.2s ease-out;
    }
</style>

@code {
    private bool collapseNavMenu = true;
    private bool gestionExpanded = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void ToggleGestionMenu()
    {
        gestionExpanded = !gestionExpanded;
    }
}